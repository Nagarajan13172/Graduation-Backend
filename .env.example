# Server Configuration
PORT=8080

# BillDesk UAT Configuration (from BillDesk onboarding)
# Replace these with actual values from your BillDesk account
BILLDESK_CLIENT_ID=your_client_id_here
BILLDESK_SECRET=your_hs256_secret_here
BILLDESK_MERC_ID=your_mercid_here

# BillDesk Base URL (UAT environment)
BILLDESK_BASE_URL=https://uat1.billdesk.com/u2

# Return URL (where browser redirects after payment)
# Update this to your frontend URL
RU_PUBLIC=https://your-frontend.example.com/payment/result

# Alternative: If testing locally, you can use:
# RU_PUBLIC=http://localhost:3000/payment/result
